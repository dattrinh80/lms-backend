# Application
NODE_ENV=development
PORT=3000
APP_NAME=LMS Backend
LOG_LEVEL=info
LOG_PRETTY=false

# CORS
CORS_ENABLED=true
# Leave empty to allow all origins during development
CORS_ORIGINS=
CORS_CREDENTIALS=false
# CORS_ALLOWED_HEADERS=
# CORS_METHODS=

# Database
DATABASE_URL="mysql://lms:lmsPass123@localhost:3307/lms"
SHADOW_DATABASE_URL="mysql://root:rootPass123@localhost:3307/lms_shadow"

# Authentication
JWT_ACCESS_TOKEN_SECRET=jwt@token123Access
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_SECRET=jwt@token123reFresh
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Cache
REDIS_URL=redis://localhost:6379

# Queue / Messaging
BULL_REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# File storage
FILES_DRIVER=s3
FILES_S3_ENDPOINT=http://localhost:9000
FILES_S3_ACCESS_KEY=minio
FILES_S3_SECRET_KEY=minio123
FILES_S3_BUCKET=lms

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
SENTRY_DSN=
TRACING_ENABLED=false
OTEL_SERVICE_NAME=lms-backend
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Payments (placeholder)
PAYMENTS_PROVIDER=vnpay
PAYMENTS_VNPAY_TMNCODE=
PAYMENTS_VNPAY_HASH_SECRET=
